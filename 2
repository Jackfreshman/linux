#include<stdio.h>//数组元素作函数实参，并用到嵌套调用

//#include<math.h>

void main()

{	

	int higher(int x,int y);

	int a[10],b[10],i,n=0,m=0,k=0;

	printf("please input array a:");

	for(i=0;i<10;i++)

		scanf("%d",&a[i]);//数组元素作为实参

	printf("\n");

	printf("please input array b:");

	for(i=0;i<10;i++)

	scanf("%d",&b[i]);

	printf("\n");

	for(i=0;i<10;i++)//比较10个队员\\多次犯这个错误了，总是在for的后面加分号

	{

		if(higher(a[i],b[i])==1)

			n++;

		else

			if(higher(a[i],b[i])==0)//这里的括号曾经错误了

				m++;

			else

				k=k+1;

	}

	printf("a higher b %d times\na equal to b %d times\nb higher a %d times\n",n,m,k);/*输出n,m,k的值*/

	if(n>k)

		printf("a wins!\n");

	else

		if(n<k)

			printf("b wins!\n");

		else

			printf("a equal to b\n");

}

int higher(int x,int y)

{	int flag;

	if(x>y) flag=1;

	else if(x<y) flag=-1;

	else flag=0;

	return(flag);

}
